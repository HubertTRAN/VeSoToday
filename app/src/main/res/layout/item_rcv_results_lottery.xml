<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view_Results_Lottery"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="3dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="10"
        android:id="@+id/lnl_Results_Lottery_All"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:id="@+id/img_gif_Results_Lottery"
            android:src="@drawable/gif_than_tai_trung_thuong"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/txt_Results_Lottery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_weight="7.5"
            android:layout_marginStart="5dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/ket_qua_da_trung_thuong"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/img_Open_Result"
            android:src="@drawable/ic_info"
            android:layout_height="25dp"/>
</LinearLayout>



</androidx.cardview.widget.CardView>
